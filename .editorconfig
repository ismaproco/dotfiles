# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# 2 space indentation
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

[*.{css, html}]
indent_style = space
indent_size = 2
